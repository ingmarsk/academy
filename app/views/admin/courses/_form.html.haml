= simple_form_for [:admin, @course] do |f|
  = f.error_notification
  - if f.object.errors[:base].present?
    = f.error_notification message: f.object.errors[:base].to_sentence

  .form-inputs
    = f.input :title
    = f.input :description

  .form-actions.mt-3
    = f.button :submit, class: 'btn btn-primary'
