%h1 My Courses
%table
  %thead
    %tr
      %th Title
      %th Votes
      %th{colspan: '3'}
  %tbody
    - @courses.each do |course|
      %tr
        %td= course.title
        %td= course.votes.size
        %td= link_to 'Show', admin_course_path(course)
        %td= link_to 'Edit', edit_admin_course_path(course)
        %td= link_to 'Delete', admin_course_path(course), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'Register New Course', new_admin_course_path
